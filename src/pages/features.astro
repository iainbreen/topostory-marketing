---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CTA from '@/components/CTA.astro';

const stylePresets = [
  {
    name: 'Emerald Isle',
    description: 'Irish-inspired greens with vibrant trail',
    colors: ['#4a734a', '#7fa87f', '#b8d4b8'],
    accent: '#d94f30',
  },
  {
    name: 'Antique Survey',
    description: 'Aged parchment inspired by historical maps',
    colors: ['#6b5344', '#a08060', '#c9b99a'],
    accent: '#8b2d1a',
  },
  {
    name: 'Midnight Trail',
    description: 'Dark mode with electric coral accents',
    colors: ['#0f1c24', '#1e3344', '#2d4a5e'],
    accent: '#ff6b35',
  },
  {
    name: 'Worn Boots',
    description: 'Clean, modern style for everyday hikes',
    colors: ['#3d6b3d', '#6b9b6b', '#a8c9a8'],
    accent: '#e74c3c',
  },
  {
    name: 'Nordic Frost',
    description: 'Icy Scandinavian aesthetic with glacier blues',
    colors: ['#4a7c9c', '#8ab4d0', '#c8dae8'],
    accent: '#e63946',
  },
  {
    name: 'Golden Hour',
    description: 'Warm sunset tones capturing dusk magic',
    colors: ['#8a6a4a', '#c9a87a', '#e8d4b0'],
    accent: '#c44536',
  },
  {
    name: 'Autumn Highlands',
    description: 'Rich fall colours with rustic warmth',
    colors: ['#6b4a2a', '#a87c50', '#d4b896'],
    accent: '#b8860b',
  },
  {
    name: 'Ink & Paper',
    description: 'Minimalist black and white elegance',
    colors: ['#505050', '#909090', '#d0d0d0'],
    accent: '#1a1a1a',
  },
  {
    name: 'Ocean Breeze',
    description: 'Coastal teals with coral accents',
    colors: ['#2a8a88', '#5ab4b0', '#a8d8d4'],
    accent: '#ff6b6b',
  },
  {
    name: 'Classic',
    description: 'Traditional cartographic warmth',
    colors: ['#6b5a40', '#a89070', '#d4c4a8'],
    accent: '#c45030',
  },
  {
    name: 'Vintage',
    description: 'Aged paper with hand-drawn feel',
    colors: ['#6a5840', '#9a8468', '#c8b898'],
    accent: '#7a3020',
  },
  {
    name: 'Forest',
    description: 'Deep greens for natural landscapes',
    colors: ['#304828', '#608858', '#a8c8a0'],
    accent: '#b84820',
  },
  {
    name: 'Desert',
    description: 'Warm sandy tones for arid terrain',
    colors: ['#8a7050', '#c4a880', '#e8d8c0'],
    accent: '#d45020',
  },
];

const trails = [
  { name: 'Wicklow Way', distance: '127 km' },
  { name: 'Kerry Way', distance: '214 km' },
  { name: 'Wild Atlantic Way', distance: '2,500 km' },
  { name: 'Beara Way', distance: '206 km' },
  { name: 'Dingle Way', distance: '179 km' },
  { name: 'Sheep\'s Head Way', distance: '88 km' },
];
---

<BaseLayout
  title="Features"
  description="Discover all the features that make TopoStory the best way to create beautiful trail maps."
>
  <section class="pt-12 pb-20 bg-gradient-to-b from-terrain-50 to-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-terrain-900">
          Features
        </h1>
        <p class="mt-4 text-lg text-terrain-700 max-w-2xl mx-auto">
          Everything you need to share your hiking adventures on Instagram. Upgrade to Pro
          for unlimited exports, AI-powered storytelling, and print-quality files.
        </p>
      </div>

      <!-- GPX Import -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-forest-100 text-forest-700 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
            </svg>
            Import
          </div>
          <h2 class="text-3xl font-display font-bold text-terrain-900">
            Import any GPX file
          </h2>
          <p class="mt-4 text-lg text-terrain-700">
            Upload trail recordings from Strava, Komoot, AllTrails, Garmin, or any
            GPS device. TopoStory automatically extracts the route, calculates
            statistics, and positions the map viewport.
          </p>
          <ul class="mt-6 space-y-3">
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Drag and drop or click to browse
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Automatic distance and elevation calculation
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Works with any GPS track format
            </li>
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden shadow-lg">
          <video
            autoplay
            muted
            loop
            playsinline
            class="w-full aspect-video object-cover"
            src="/images/demo-gpx-upload.mp4"
          />
        </div>
      </div>

      <!-- Change Styles -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <div class="order-2 lg:order-1 rounded-2xl overflow-hidden shadow-lg">
          <video
            autoplay
            muted
            loop
            playsinline
            class="w-full aspect-video object-cover"
            src="/images/demo-styles.mp4"
          />
        </div>
        <div class="order-1 lg:order-2">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-forest-100 text-forest-700 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
            </svg>
            Styles
          </div>
          <h2 class="text-3xl font-display font-bold text-terrain-900">
            Thirteen stunning map styles
          </h2>
          <p class="mt-4 text-lg text-terrain-700">
            Transform your map with a single click. Choose from thirteen carefully
            crafted visual styles, each with its own colour palette, typography,
            and aesthetic to match your taste.
          </p>
          <ul class="mt-6 space-y-3">
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Instant style switching
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Curated colour palettes
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Matched typography for each style
            </li>
          </ul>
        </div>
      </div>

      <!-- Style Presets -->
      <div class="mb-24">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-forest-100 text-forest-700 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
            </svg>
            Styles
          </div>
          <h2 class="text-3xl font-display font-bold text-terrain-900">
            Thirteen stunning presets
          </h2>
          <p class="mt-4 text-lg text-terrain-700 max-w-2xl mx-auto">
            Choose from carefully crafted visual styles, each with its own color
            palette, typography, and aesthetic.
          </p>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
          {stylePresets.map((style) => (
            <div class="bg-terrain-50 rounded-lg p-4 text-center border border-terrain-200 hover:border-forest-300 transition-colors cursor-pointer" data-style-preview={style.name}>
              <div class="w-12 h-12 rounded-lg mx-auto mb-3 overflow-hidden shadow-sm border border-terrain-200">
                <div
                  class="w-full h-full"
                  style={`background: linear-gradient(135deg, ${style.colors[0]} 0%, ${style.colors[1]} 50%, ${style.colors[2]} 100%);`}
                />
              </div>
              <h3 class="font-medium text-terrain-900">{style.name}</h3>
              <p class="text-sm text-terrain-700 mt-1">{style.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- AI POIs -->
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-24">
        <div>
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-forest-100 text-forest-700 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            AI-Powered
          </div>
          <h2 class="text-3xl font-display font-bold text-terrain-900">
            Intelligent point of interest research
          </h2>
          <p class="mt-4 text-lg text-terrain-700">
            Google Gemini AI researches your trail and suggests relevant landmarks,
            viewpoints, historic sites, and facilities. Each POI is matched against
            OpenStreetMap for accurate positioning.
          </p>
          <ul class="mt-6 space-y-3">
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Automatic landmark discovery
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Matched to OSM coordinates
            </li>
            <li class="flex items-center gap-3 text-terrain-700">
              <svg class="w-5 h-5 text-forest-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Add or remove POIs manually
            </li>
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden shadow-lg">
          <video
            autoplay
            muted
            loop
            playsinline
            class="w-full aspect-video object-cover"
            src="/images/demo-poi.mp4"
          />
        </div>
      </div>

      <!-- Irish Trails -->
      <div class="text-center mb-24">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-forest-100 text-forest-700 text-sm font-medium mb-4">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
          </svg>
          Irish Trails
        </div>
        <h2 class="text-3xl font-display font-bold text-terrain-900 mb-4">
          Perfect for Irish Waymarked Trails
        </h2>
        <p class="text-lg text-terrain-700 max-w-2xl mx-auto mb-8">
          TopoStory is optimized for the unique landscapes of Ireland, with a
          self-hosted Overpass server providing fast, reliable geographic data.
        </p>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 max-w-2xl mx-auto">
          {trails.map((trail) => (
            <div class="bg-white rounded-lg p-4 border border-terrain-200">
              <p class="font-medium text-terrain-900">{trail.name}</p>
              <p class="text-sm text-terrain-700">{trail.distance}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <CTA
    title="Share your next adventure"
    description="Create stunning trail maps for Instagram. Upgrade to Pro for unlimited exports, AI POI, and print quality."
  />
</BaseLayout>
