---
const navLinks = [
  { href: '/features', label: 'Features' },
  { href: '/pricing', label: 'Pricing' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-terrain-100">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-2">
        <svg class="w-8 h-8 text-forest-600" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 24L10 12L16 18L22 8L28 16" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M4 28H28" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
        </svg>
        <span class="text-xl font-display font-semibold text-terrain-900">TopoStory</span>
      </a>

      <div class="hidden sm:flex items-center gap-8">
        {navLinks.map((link) => (
          <a href={link.href} class="text-terrain-600 hover:text-terrain-900 transition-colors">
            {link.label}
          </a>
        ))}
      </div>

      <div class="flex items-center gap-4">
        <a href="https://app.topostory.com" class="text-terrain-600 hover:text-terrain-900 transition-colors">
          Sign In
        </a>
        <a href="https://app.topostory.com" class="btn btn-primary">
          Get Started
        </a>
      </div>
    </div>
  </nav>
</header>
