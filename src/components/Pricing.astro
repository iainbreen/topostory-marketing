---
const plans = [
  {
    name: 'Free',
    price: '0',
    description: 'Perfect for sharing on Instagram',
    features: [
      '3 map exports per month',
      'Instagram Post & Story formats',
      '13 core style presets',
      'GPX file import',
    ],
    cta: 'Get Started',
    href: 'https://app.topostory.com',
    featured: false,
  },
  {
    name: 'Pro',
    price: '3.50',
    period: '/month',
    yearlyPrice: '35',
    description: 'For active trail content creators',
    features: [
      'Unlimited exports',
      'Instagram Post & Story formats',
      'All style presets + new styles',
      'AI-powered POI suggestions',
      'High-resolution print files (SVG/PNG)',
      'GPX file import',
      'Priority support',
    ],
    cta: 'Start Pro Trial',
    href: 'https://app.topostory.com',
    featured: true,
  },
];
---

<section class="py-20 bg-white" data-pricing-section>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-display font-bold text-terrain-900">
        Simple, transparent pricing
      </h2>
      <p class="mt-4 text-lg text-terrain-700 max-w-2xl mx-auto">
        Start for free, upgrade when you need more.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {plans.map((plan) => (
        <div class={`rounded-2xl p-8 ${plan.featured ? 'bg-forest-600 text-white ring-4 ring-forest-600 ring-offset-2' : 'bg-terrain-50 border border-terrain-200'}`}>
          <h3 class={`text-xl font-semibold ${plan.featured ? 'text-white' : 'text-terrain-900'}`}>
            {plan.name}
          </h3>
          <p class={`mt-2 ${plan.featured ? 'text-white' : 'text-terrain-700'}`}>
            {plan.description}
          </p>

          <div class="mt-6">
            <span class={`text-4xl font-bold ${plan.featured ? 'text-white' : 'text-terrain-900'}`}>
              &euro;{plan.price}
            </span>
            {plan.period && (
              <span class={plan.featured ? 'text-white' : 'text-terrain-700'}>
                {plan.period}
              </span>
            )}
            {plan.yearlyPrice && (
              <p class={`text-sm mt-1 ${plan.featured ? 'text-white' : 'text-terrain-700'}`}>
                or &euro;{plan.yearlyPrice}/year (save 17%)
              </p>
            )}
          </div>

          <ul class="mt-8 space-y-4">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class={`w-5 h-5 flex-shrink-0 mt-0.5 ${plan.featured ? 'text-white/70' : 'text-forest-600'}`} fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class={plan.featured ? 'text-white' : 'text-terrain-700'}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>

          <a
            href={plan.href}
            class={`mt-8 block w-full btn text-center ${plan.featured ? 'bg-white text-forest-700 hover:bg-forest-50' : 'btn-primary'}`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
