<section class="relative overflow-hidden bg-gradient-to-b from-terrain-50 to-white py-20 sm:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-terrain-900 leading-tight">
          Turn your trails into
          <span class="text-forest-600">works of art</span>
        </h1>
        <p class="mt-6 text-lg text-terrain-600 max-w-xl">
          Create stunning topographical maps of your favourite hiking trails.
          Import your GPX file, choose a style, and export a high-resolution
          print-ready map perfect for framing.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <a href="https://app.topostory.com" class="btn btn-primary text-lg px-8">
            Create Your Map
          </a>
          <a href="/features" class="btn btn-outline text-lg px-8">
            See Examples
          </a>
        </div>
        <p class="mt-4 text-sm text-terrain-500">
          Free to try. No credit card required.
        </p>
      </div>

      <div class="relative">
        <!-- Placeholder for map preview image -->
        <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-terrain-100 to-terrain-200 shadow-2xl overflow-hidden border border-terrain-200">
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto text-terrain-400 mb-4" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 24L10 12L16 18L22 8L28 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M4 28H28" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <circle cx="8" cy="18" r="1.5" fill="currentColor"/>
                <circle cx="20" cy="14" r="1.5" fill="currentColor"/>
                <circle cx="26" cy="20" r="1.5" fill="currentColor"/>
              </svg>
              <p class="text-terrain-500 text-sm">Sample map preview</p>
            </div>
          </div>
          <!-- Contour line decoration -->
          <svg class="absolute inset-0 w-full h-full opacity-20" preserveAspectRatio="none">
            <defs>
              <pattern id="contours" patternUnits="userSpaceOnUse" width="100" height="20">
                <path d="M0 10 Q25 0 50 10 T100 10" fill="none" stroke="currentColor" stroke-width="1" class="text-terrain-500"/>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#contours)"/>
          </svg>
        </div>
        <!-- Floating badge -->
        <div class="absolute -bottom-4 -left-4 bg-white rounded-lg shadow-lg px-4 py-3 border border-terrain-100">
          <p class="text-sm font-medium text-terrain-900">Irish Waymarked Trails</p>
          <p class="text-xs text-terrain-500">Wicklow Way, Kerry Way & more</p>
        </div>
      </div>
    </div>
  </div>
</section>
